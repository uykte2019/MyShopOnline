<% include ../layout/header.ejs %>
<!-- Header End -->

<div id="maincontainer">
  <!-- Slider Start-->
  <section class="slider">
    <div class="container">
      <div class="flexslider" id="mainslider">
        <ul class="slides">
          <li>
            <img src="img/banner1.jpg" alt="" />
          </li>
          <li>
            <img src="img/banner2.jpg" alt="" />
          </li>
          <li>
            <img src="img/banner3.jpg" alt="" />
          </li>
          <li>
            <img src="img/banner4.jpg" alt="" />
          </li>
        </ul>
      </div>
    </div>
  </section>
  <!-- Slider End-->
  
  <!-- Section Start-->
  <section class="container otherddetails">
    <div class="otherddetailspart">
      <div class="innerclass free">
        <h2>Giao hàng miễn phí</h2>
        Cho tất cả các đơn hàng trên 1tr đồng </div>
    </div>
    <div class="otherddetailspart">
      <div class="innerclass payment">
        <h2>Thanh toán dễ dàng</h2>
        Hỗ trợ cổng thanh toán </div>
    </div>
    <div class="otherddetailspart">
      <div class="innerclass shipping">
        <h2>Giao hàng trong 24h</h2>
        Miễn phí cho khách hàng ở tpHCM </div>
    </div>
    <div class="otherddetailspart">
      <div class="innerclass choice">
        <h2>Hơn 5000 mẫu thoải mái lựa chọn</h2>
        50,000+ sản phẩm </div>
    </div>
  </section>
  <!-- Section End-->
  
  <!-- Featured Product-->
   <%   cate.forEach(function(ca){ var id = 0; %>
      <section id="featured" class="row mt40">
        <div class="container">
         
          <h1 class="heading1"><span class="maintext"> <%= ca.name%> </span><span class="subtext"> Xem những sản phẩm nổi bật</span></h1>
          
          <ul class="thumbnails">
            <%  product.forEach(function(pro){ if(id < 4) { if(pro.cateId == ca._id){ id ++ ; %>

                  <li class="span3">
                    <a class="prdocutname" href="product.html"> <%= pro.name %> </a>
                    <div class="thumbnail">
                      <span class="sale tooltip-test">Sale</span>
                      <a href="/chi-tiet/<%= pro.nameKhongDau%>.<%= pro._id%>.<%= pro.cateId%>.html"><img alt="" src="upload/<%= pro.img %>"></a>
                      <div class="pricetag">
                        <span class="spiral"></span><a href="/add-cart.<%= pro._id %>" class="productcart">ADD TO CART</a>
                        <div class="price">
                          <div class="pricenew"><%= pro.price %></div>
                        </div>
                      </div>
                    </div>
                  </li>
            <% }}})%>
           
          </ul>
          
        </div>
      </section>
  <% })%>
  <!-- Latest Product-->


<!-- Footer -->
